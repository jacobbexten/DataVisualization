{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "",
  "width": 1200,
  "height": 300,
  "autosize": {
    "type": "fit-x",
    "resize": false
  },

  "signals": [
    {
      "name": "scale", "value": 110,
      "bind": {"input": "range", "min": 50, "max": 400, "step": 5}
    },
    {
      "name": "opacity", "value": 0.5,
      "bind": {"input": "range", "min": 0, "max": 1, "step": 0.01}
    },
    {
      "name": "levels", "value": 3,
      "bind": {"input": "range", "min": 2, "max": 6, "step": 1}
    },
    {
      "name": "stop", "value": 2
    },
    {
      "name": "step",
      "update": "stop / levels"
    }

  ],

  "data": [
    {
      "name": "population",
      "url": "data/montana_native.json"
    },
    {
      "name": "contours",
      "source": "population",
      "transform": [
        {
          "type": "isocontour",
          "thresholds": {"signal": "sequence(0, stop, step)"}
        }
      ]
    },
    {
      "name": "montana",
      "url": "data/us.json"
    }
  ],

  "projections": [
    {
      "name": "projection",
      "type": "albersUsa"
    }
  ],

  "scales": [
    {
      "name": "color",
      "type": "quantize",
      "domain": {"signal": "[0, stop]"},
      "range": {"scheme": "lightorange", "count": {"signal": "levels"}}
    }
  ],

  "marks": [
    {
      "type": "shape",
      "clip": true,
      "from": {
        "data": "montana"
      },
      "encode": {
        "update": {
          "strokeWidth": {
            "value": 1
          },
          "stroke": {
            "value": "#eee"
          },
          "fill": {
            "value": "#ddd"
          }
        }
      },
      "transform": [
        {
          "type": "geoshape",
          "projection": "projection"
        }
      ]
    },
    {
      "type": "shape",
      "from": { "data": "contours"},
      "encode": {
        "update": {
          "fill": {"scale": "color", "field": "contour.value"},
          "fillOpacity": {"signal": "opacity"}
        }
      },
      "transform": [
        {
          "type": "geoshape",
          "field": "datum.contour",
          "projection": "projection"
        }
      ]
    }
  ],

  "legends": [
    {
      "title": "2010 American Indian Population (%)",
      "fill": "color",
      "orient": "left",
      "offset": 0,
      "type": "gradient",
      "direction": "vertical",
      "gradientLength": 200,
      "gradientThickness": 10,
      "titlePadding": 10,
      "titleOrient": "left",
      "titleAnchor": "start",
      "titleLineHeight": 20,
      "titleBaseline": "line-bottom",
      "titleFontSize": 10
    }
  ],

  "config": {
    "legend": {"layout": {"anchor": "middle"}}
  }
}
